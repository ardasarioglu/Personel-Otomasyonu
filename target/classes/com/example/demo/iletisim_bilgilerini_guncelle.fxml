<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo.controllers.iletisim_bilgilerini_guncelleController">

   <children>
      <Label layoutX="324.0" layoutY="291.0" text="Yeni E-Posta:">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Label layoutX="244.0" layoutY="376.0" text="Yeni Telefon Numarası:">
         <font>
            <Font size="36.0" />
         </font>
      </Label>

      <!-- E-Posta girişi -->
      <TextField fx:id="newEmailField"
                 layoutX="651.0" layoutY="305.0"
                 prefHeight="25.0" prefWidth="277.0" />

      <!-- Telefon girişi -->
      <TextField fx:id="newPhoneField"
                 layoutX="651.0" layoutY="390.0"
                 prefHeight="25.0" prefWidth="277.0" />

      <!-- E-Posta Onayla Butonu -->
      <Button fx:id="updateEmailButton"
              layoutX="951.0" layoutY="305.0"
              mnemonicParsing="false"
              onAction="#updateEmail"
              text="Onayla" />

      <!-- Telefon Onayla Butonu -->
      <Button fx:id="updatePhoneButton"
              layoutX="951.0" layoutY="390.0"
              mnemonicParsing="false"
              onAction="#updatePhone"
              text="Onayla" />

      <!-- Ana Menü Butonu -->
      <Button fx:id="anaMenuButton"
              layoutX="34.0" layoutY="34.0"
              mnemonicParsing="false"
              onAction="#anaMenu"
              text="Ana Menü">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </children>
</AnchorPane>